<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484948">
    <ImageView
        android:id="@+id/song_ImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/round_audiotrack_24"/>
    <TextView
        android:id="@+id/song_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/song_ImageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:textColor="#dedede"/>

    <TextView
        android:id="@+id/song_Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_song_list"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/song_ImageView"
        android:textColor="#b5b5b5"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/song_More"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_more_vert_24"
        android:layout_above="@+id/view_song_list"
        android:layout_marginEnd="30dp"/>
    <View
        android:id="@+id/view_song_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/song_ImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#a4a4a4" />

</RelativeLayout>