<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <TextView
        android:id="@+id/change_old_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:textColor="#292929"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/change_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_old_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:text="新名稱:"
        android:textColor="#292929"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/change_new_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_old_name"
        android:layout_toEndOf="@+id/change_Text"
        android:textColor="#292929"
        android:textSize="20sp" />

    <Button
        android:id="@+id/change_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_new_name"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/change_Confirm"
        android:textColor="#292929"
        android:text="取消" />
    <Button
        android:id="@+id/change_Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:textColor="#292929"
        android:layout_below="@+id/change_new_name"
        android:text="確定"/>
</RelativeLayout>