<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/youtube_Song_ImageView"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/round_audiotrack_24"/>
    <TextView
        android:id="@+id/youtube_Song_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/youtube_Song_ImageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:textColor="@drawable/item_text_selector"/>
    <TextView

        android:id="@+id/youtube_Song_Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/youtube_Song_ImageView"
        android:layout_above="@+id/youtube_View_Song_list"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/check_Image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/youtube_View_Song_list"/>


    <View
        android:id="@+id/youtube_View_Song_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/youtube_Song_ImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#292929" />

</RelativeLayout>